@model Online_Learn.Models.Blog
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Account user = Context.Session.GetString("User") != null ?
           JsonConvert.DeserializeObject<Account>(Context.Session.GetString("User")) : null;
    int idAccount = user == null ? -1 : user.AccountId;
}
<link rel="stylesheet" href="~/css/BlogDetails.css">
<link rel="stylesheet" href="~/carosel/owl.carousel.css">
<link rel="stylesheet" href="~/carosel/owl.theme.default.css">

<div class="blogdetail">
    <div class="container my-5">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-1">
                        <div class="avt ">
                            <a href="@ViewData["AccountImg"]" style="text-decoration: none;">@ViewData["user"]</a>
                        </div>
                    </div>
                    <div class="col-md-4 profile">
                        <div>
                            <a href="https://www.w3schools.com/"
                               style="text-decoration: none; color: #5488c7"><b>@ViewData["AccountName"]</b></a>
                            <span>
                                <button type="button"
                                        style="color: #606266; background-color: white; border: 1px solid gainsboro; border-radius: 3px ;width: 60px;">
                                    Follow
                                </button>
                            </span>

                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="drop">Published @Html.DisplayFor(model => model.UpdateAt)</div>

                    </div>
                </div>

                <div class="content">
                    <br>
                    <h1 style="font-size: 40px; font-weight: 650;">@Html.DisplayFor(model => model.Title)</h1><br>

                </div>
                @if (idAccount == Model.AccountId)
                {
                    <div class="row ">
                        <div class="col"></div>
                        <div class="col-md-1 drop">
                            <div class="dropdown">
                                <button class="dropdownn" style="border: 0px;
                                    background-color:white;" type="button" data-bs-toggle="dropdown" id="dropdownMenuButton1 " aria-expanded="false">
                                    <i class="fal fa-ellipsis-h" style="font-size: 30px"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li>
                                        <a class="dropdown-item" href="/Blog/Edit/@ViewData["BlogId"]">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" onclick="notice(@ViewData["BlogId"])">
                                            <i class="fas fa-trash"></i> Delete this post
                                        </a>
                                    </li>
                                    <script>
                                        function notice(idDelete) {
                                            var option = confirm('Do you want delete?');
                                            if (option === true) {
                                                window.location.href = '/Blog/Delete/' + idDelete;
                                            }
                                        }
                                    </script>
                                </ul>
                            </div>

                        </div>
                    </div>
                }

                <div class="my-5">
                    <p>@Html.Raw(Model.Content)</p><br>
                </div>
            </div>
