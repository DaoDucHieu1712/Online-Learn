<div class="course-contact">
    <div class="course-contact__header">
        <a href="#Home"><img src="./assets/img/Udemy_logo.svg" alt="" width="91" height="34" /></a>
        <span class="course-contact__heading">Order Manager</span>
    </div>
    <div class="course-contact__account">
        <div class="course-contact__avt">
            <a><img class="course-show" src="https://source.unsplash.com/random" alt=""></a>
        </div>
        <div class="course-contact__user">
            <div class="course-contact__profile">
                <div class="course-contact__img">
                    <a><img src="https://source.unsplash.com/random" alt=""></a>
                </div>
                <div class="course-contact__name">
                    <span class="course-contact__fn">My full name</span><br>
                    <span class="course-contact__email">My email</span>
                </div>
            </div>
            <div class="course-contact__pf">
                <span class="course-contact__pr"><a href="#">Public Profile</a></span><br>
                <span class="course-contact__pr"><a href="#">Edit Profile</a></span>
            </div>
            <div class="course-contact__logout">
                <span class="course-contact__lg"><a href="#">Logout</a></span>
            </div>
        </div>
    </div>
</div>

<div class="order">
    <div class="order-home">
        <span class="order-span">
            <a class="order-link" href="/Order/List?pageIndex=1" class="order-link">
                Order
            </a>
        </span>
        <span>></span>
        <span>Order detail</span>
    </div>
    <div class="order-wrap">
        <div class="order-left">
            <div class="order-left__info">
                <div class="order-group">
                    <div class="order-group-img">
                        <div class="order-group-avt">
                            <p>@ViewBag.order.Account.Username</p>
                        </div>
                    </div>
                    <div class="order-group-name">
                        <p>@ViewBag.order.Account.FulllName</p>
                    </div>
                </div>
                <div class="order-groupQ">
                    <label for="" class="order-groupQ-label">Email</label>
                    <p class="order-groupQ-p">@ViewBag.order.Account.Email</p>
                </div>
                <div class="order-groupQ">
                    <label for="" class="order-groupQ-label">Phone</label>
                    <p class="order-groupQ-p">@ViewBag.order.Account.Phone>
                </div>
                <div class="order-groupQ">
                    <label for="" class="order-groupQ-label">Order date</label>
                    <p class="order-groupQ-p">@ViewBag.order.OrderDate</p>
                </div>
            </div>
        </div>
        <div class="order-right">
            <h2 class="order-right__heading">Order Code : #@ViewBag.order.OrderId</h2>
            <p class="order-right__totalC">@ViewBag.order_detail.Count Course in Order detail</p>
            <div class="order-right__wrap">
                <div class="order-right__course">
                    @foreach (var item in ViewBag.order_detail)
                    {
                        <div class="order-right__item">
                            <div class="order-right__img">
                                <img src="@item.Course.Image" alt="">
                            </div>
                            <div class="order-right__content">
                                <h3>@item.Course.CourseName</h3>
                                <p>@item.Course.Language</p><br>
                            </div>
                            <div class="order-right__price">
                                <p>$ @item.Course.Price</p>
                            </div>
                        </div>
                    }

                </div>
                <div class="order-right__total">
                    <h5>Total : @ViewBag.order.TotalPrice $</h5>

                </div>
            </div>
        </div>
    </div>
</div>

